def APP_DIR = 'vue-webpack'

podTemplate (
    containers: [
        containerTemplate(name: 'nodejs', image: "node:12-alpine", ttyEnabled: true, command: 'cat'),
        containerTemplate(name: 'docker', image: 'docker:19', ttyEnabled: true, command: 'cat')
    ],
    volumes: [
        hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'),
    ]
) {
    node(POD_LABEL) {
        stage('git') {
            container('nodejs') {
                checkout scm
            }
        }
        stage('npm install') {
            container('nodejs') {
                dir (APP_DIR) {
                    sh 'npm install'
                }
            }
        }
        stage('npm build') {
            container('nodejs') {
                dir (APP_DIR) {
                    sh 'npm run build'
                }
            }
        }
        stage('Docker build') {
            environment {
                NODE_ENV = 'production'
            }
            container('docker') {
                dir (APP_DIR) {
                    sh "docker build -t vue-webpack:${env.BUILD_ID}"
                    // def customImage = docker.build("vue-webpack:${env.BUILD_ID}")
                }
            }
        }
    }
}