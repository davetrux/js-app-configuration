def APP_DIR = 'vue-webpack'

podTemplate (
    containers: [
        containerTemplate(name: 'nodejs', image: "node:12-alpine", ttyEnabled: true, command: 'cat')
    ]
) {
    node(POD_LABEL) {
        stage('git') {
            container('nodejs') {
                checkout scm
            }
        }
        stage('npm install') {
            container('nodejs') {
                dir (APP_DIR) {
                    sh 'npm install'
                }
            }
        }
        stage('npm build') {
            container('nodejs') {
                dir (APP_DIR) {
                    sh 'npm run build'
                }
            }
        }
    }
}